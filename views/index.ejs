<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar sesi√≥n</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
  </head>
  <body>
    
    <%- include("include/navbar.ejs") %>

    <div class="container my-4">
      <div class="card" style="width: 100%">
        <div class="card-body">
          <% if (status == "loggedIn") {%>

          <h5 class="card-title">Welcome back  <%= user.email %>!</h5>

          <%} else {%>
            <h5 class="card-title">Welcome! </h5>

            <%}%>
          <h6 class="card-subtitle mb-2 text-muted">Second node proyect (almost no tutorials used)</h6>
          <p class="card-text">
            A to-do web page to manage all your daily tasks with account sessions (using JWT)!
          </p>
          <% if (status == "loggedIn") {%>
            <button class="btn btn-warning">
              <a href="/logout" style="color: white; text-decoration: none"
                >Log out</a
              >
            <%} else {%>
              <button class="btn btn-secondary">
                <a href="/login" style="color: white; text-decoration: none"
                  >Log in</a
                >
              </button>
              <button class="btn btn-warning">
                <a href="/register" style="color: white; text-decoration: none"
                  >Register</a
                >
              <%}%>

          </button>
        </div>
      </div>
    </div>
  </body>
</html>
